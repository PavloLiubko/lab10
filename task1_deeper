#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int main() {

    int n;
    cout << "Введіть кількість елементів масиву n:";
    cin >> n; 
    cout << endl;
    
    std::vector <int> arr;
    
    for (int i = 0; i < n; i++) {
        cout << "Введіть якесь ціле число:";
        int num;
        cin >> num;
        arr.push_back(num);
    }
    cout << "Наш масив: \n";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << endl;
    }
    
    int maximum = *std::max_element(arr.begin(), arr.end());
    int minimum = *std::min_element(arr.begin(), arr.end());
    int idMax = 0;
    int idMin = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] == maximum) {
            idMax = i;
        } 
        else if (arr[i] == minimum) {
            idMin = i;
        }
    }
    
    cout << "Мінімальний елемент = " << minimum << endl;
    cout << "Максимальний елемент = " << maximum << endl;
    
    
    int start_index = std::min(idMin, idMax);
    int end_index = std::max(idMin, idMax);
    
    arr.erase( arr.begin() + start_index + 1 , arr.begin() + end_index  );
    
    
    cout << "Наш змінений масив: \n" ;
    for (int i = 0; i < arr.size(); i++){
        cout << arr[i] << endl;
    }

    
return 0;
}

