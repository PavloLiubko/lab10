#include <iostream>
#include <algorithm>
#include <vector>

using namespace std;
int main()
{
   
   int n;
   cout << "Введіть кількість елементу масива n:";
    cin >> n;
   
   std:: vector<int> arr;
   for (int i =0; i < n; i++) {
       cout << "Введіть значення елеемента на позиції " << i << ":";
       int num;
       cin >> num;
       arr.push_back(num);
   }
   
   cout << "Наш масив: \n";
   for (int i =0; i < n; i++) {
       cout << arr[i] << endl;
   }
   
   int maximum = *std::max_element(arr.begin(), arr.end());
   int minimum = *std::min_element(arr.begin(), arr.end());
   
   cout << "Максимум:" << maximum << endl << "Мінімум:" << minimum;
   
    return 0;
}
